<h1>
  <%= @project.name %>
</h1>

<p><%= @project.description %></p>

<%= link_to "Edit Project", edit_project_path(@project) %><br>
<%= link_to "Delete Project", project_path(@project), method: :delete,
data: { confirm: "Are you sure you want to delete this project?" }%>

<section class="project--shots">
  <h2>Project Shots</h2>

  <div class="cards">
    <% @project.shots.each do |shot| %>
      <div class="card">
        <%= link_to [@project, shot] do %>
          <div class="card-image">
            <%= image_tag shot.image.url %>
          </div>
          <div class="card-header">
            <%= shot.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <ul class="actions">
    <li><%= link_to "New Shot", new_project_shot_path(@project) %></li>
  </ul>
</section>
