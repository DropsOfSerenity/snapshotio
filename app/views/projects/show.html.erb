<h1>
  <%= @project.name %>
</h1>

<p><%= @project.description %></p>

<%= link_to 'Edit Project', edit_project_path(@project) %><br>
<% admins_only do %>
  <%= link_to 'Delete Project',
              admin_project_path(@project),
              method: :delete,
              data: {confirm: 'Are you sure you want to delete this project?'}
  %>
<% end %>

<hr>

<section>
  <h2>Shots</h2>

  <ul class="actions">
    <li><%= link_to "New Shot", new_project_shot_path(@project) %></li>
  </ul>

  <ul class="project--shots">
    <% @project.shots.each do |shot| %>
      <%= link_to [@project, shot] do %>
        <li>
          <div><%= image_tag shot.image.url(:thumb) %></div>
          <div class="description">
            <h4>
              <%= shot.name %>
            </h4>

            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>

</section>
